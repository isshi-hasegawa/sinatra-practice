          <span class="card-title"><%= h(@memo["title"]) %></span>
          <p><%= h(@memo["content"]) %></p>
        </div>
      </div>
      <div class="col s6 center">
        <a href="/memos/<%= @id %>/edit" class="btn waves-effect waves-light"><i class="material-icons left">edit</i>edit</a>
      </div>
